<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>
<Pane fx:controller="com.example.projectzpo.ZPOController"
      xmlns:fx="http://javafx.com/fxml">
    <padding><Insets top="15" right="25" bottom="15" left="25"/></padding>
    <Label text="Name:" layoutX="20" layoutY="30"/>

    <TextField fx:id="textFieldName" promptText="Enter item name" layoutX="80" layoutY="30"/>

    <Label text="Cost:" layoutX="20" layoutY="70"/>

    <TextField fx:id="textFieldCost" promptText="Enter cost" layoutX="80" layoutY="70"/>

    <Label text="Amount:" layoutX="20" layoutY="110"/>

    <TextField fx:id="textFieldAmount" promptText="Enter amount" layoutX="80" layoutY="110"/>

    <Button fx:id="submitMaterial" text="Submit" layoutX="105" layoutY="150"

            onAction="#addMaterialsToStorage"/>
</Pane>
