<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>


<Pane fx:controller="Project.material.MaterialController"
      xmlns:fx="http://javafx.com/fxml">
    <padding><Insets top="15" right="25" bottom="15" left="25"/></padding>
    <Label text="Name:" layoutX="77" layoutY="30"/>

    <TextField fx:id="textFieldName" promptText="Enter item name" layoutX="120" layoutY="28"/>

    <Label text="Cost:" layoutX="84" layoutY="70"/>

    <TextField fx:id="textFieldCost" promptText="Enter cost" layoutX="120" layoutY="68"/>

    <Label text="Amount:" layoutX="65" layoutY="110"/>

    <TextField fx:id="textFieldAmount" promptText="Enter amount" layoutX="120" layoutY="108"/>

    <Label text="Expiration date:" layoutX="28" layoutY="150"/>

    <TextField fx:id="textFieldExpirationDate" promptText="Enter expiration date" layoutX="120" layoutY="148"/>

    <Button fx:id="submitMaterial" text="Submit" layoutX="120" layoutY="190"

            onAction="#addMaterialToStorage"/>
</Pane>
