<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>
<Pane fx:controller="Project.EquipmentController"
      xmlns:fx="http://javafx.com/fxml">
    <padding><Insets top="15" right="25" bottom="15" left="25"/></padding>
    <Label text="Name:" layoutX="51" layoutY="30"/>

    <TextField fx:id="textFieldName" promptText="Enter item name" layoutX="95" layoutY="28"/>

    <Label text="Cost:" layoutX="58" layoutY="70"/>

    <TextField fx:id="textFieldCost" promptText="Enter cost" layoutX="95" layoutY="68"/>

    <Label text="Amount:" layoutX="39" layoutY="110"/>

    <TextField fx:id="textFieldAmount" promptText="Enter amount" layoutX="95" layoutY="108"/>

    <Label text="Service date:" layoutX="18" layoutY="150"/>

    <TextField fx:id="textFieldServiceDate" promptText="Enter service date" layoutX="95" layoutY="148"/>

    <Button fx:id="submitEquipment" text="Submit" layoutX="105" layoutY="190"

            onAction="#addEquipmentToStorage"/>
</Pane>
